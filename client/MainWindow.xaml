<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Client" Height="600" Width="800" ResizeMode="NoResize">
    <Grid Background="#525252" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="571*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelIP" Content="Indirizzo IP" HorizontalAlignment="Left" Margin="45,25,0,0" VerticalAlignment="Top" Width="80" Height="23" FontWeight="Bold" Foreground="Black"/>
        <Button x:Name="buttonConnetti" Content="Connetti" HorizontalAlignment="Left" Margin="280,57,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonConnetti_Click"/>
        <Button x:Name="buttonDisconnetti" Content="Disconnetti" HorizontalAlignment="Left" Margin="280,57,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonDisconentti_Click"/>
        <TextBox x:Name="textBoxStato"  IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="110" Margin="440,25,0,0" TextWrapping="Wrap" Text="STATO: Disconnesso." VerticalAlignment="Top" Width="305" Grid.ColumnSpan="2"/>
        <Label x:Name="labelApplciazioni" Content="Applicazioni" HorizontalAlignment="Left"  Margin="45,140,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="300" Width="700" Margin="45,169,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" SelectionChanged="listView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Icona" DisplayMemberBinding="{Binding Path=Icona}" Width="35"/>
                    <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding Path=Nome}" Width="365"/>
                    <GridViewColumn Header="Stato Finestra" DisplayMemberBinding="{Binding Path=Stato}" Width="150"/>
                    <GridViewColumn Header="Tempo in focus (%)" DisplayMemberBinding="{Binding Path=TempoFocus}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="labelComando" Content="Invia comando alla finestra in focus:" HorizontalAlignment="Left" Margin="45,476,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="buttonCattura" Content="Cattura Comando" HorizontalAlignment="Left" Margin="45,502,0,0" VerticalAlignment="Top" Width="110" Height="23" Click="buttonCattura_Click"/>
        <TextBox x:Name="textBoxComando" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="160,502,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270"/>
        <Button x:Name="buttonInvia" Content="Invia" HorizontalAlignment="Left" Margin="435,502,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonInvia_Click"/>
        <TextBox x:Name="textBoxIpAddress" HorizontalAlignment="Left" Height="23" Margin="126,25,0,0" VerticalAlignment="Top" Width="230" TextAlignment="Center" MaxLines="1"/>


    </Grid>
</Window>
