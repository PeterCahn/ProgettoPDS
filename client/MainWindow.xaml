<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Client" Height="600" Width="800">
    <Grid Background="#525252" Margin="0,0,0,0">
        <Label x:Name="labelIP" Content="Indirizzo IP" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top" Width="70" Height="23"/>
        <TextBox x:Name="textBoxIpAddress" TextAlignment="Center" HorizontalAlignment="Left" Height="23" Margin="120,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240"/>
        <Button x:Name="buttonConnetti" Content="Connetti" HorizontalAlignment="Left" Margin="205,57,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonConnetti_Click"/>
        <Button x:Name="buttonDisconnetti" Content="Disconnetti" HorizontalAlignment="Left" Margin="285,57,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonDisconentti_Click"/>
        <TextBox x:Name="textBoxStato"  IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="110" Margin="445,25,0,0" TextWrapping="Wrap" Text="STATO: Disconnesso." VerticalAlignment="Top" Width="305"/>
        <Label x:Name="labelApplciazioni" Content="Applicazioni" HorizontalAlignment="Left"  Margin="50,140,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="300" Width="700" Margin="50,169,0,0" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nome" Width="400"/>
                    <GridViewColumn Header="Stato Finestra" Width="150"/>
                    <GridViewColumn Header="Tempo in focus (%)" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="labelComando" Content="Invia comando alla finestra in focus:" HorizontalAlignment="Left" Margin="50,476,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonCattura" Content="Cattura Comando" HorizontalAlignment="Left" Margin="50,502,0,0" VerticalAlignment="Top" Width="110" Height="23" Click="buttonCattura_Click"/>
        <TextBox x:Name="textBoxComando" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="165,502,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="270"/>
        <Button x:Name="buttonInvia" Content="Invia" HorizontalAlignment="Left" Margin="440,502,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonInvia_Click"/>


    </Grid>
</Window>
